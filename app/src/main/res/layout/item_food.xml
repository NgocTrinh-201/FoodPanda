<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView

        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/food_img_al"
            android:src="@drawable/pizza"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/food_name_all"
              android:text="pizza"
              android:lines="1"
              android:ellipsize="end"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />
          <TextView
              android:id="@+id/sale"
              android:text="Sale"
              android:textStyle="bold"
              android:textColor="@color/red"
              android:lines="1"
              android:layout_marginStart="-100dp"
              android:ellipsize="end"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/soldOutall"
              android:visibility="gone"
              android:text="SoldOut"
              android:textStyle="bold"
              android:textColor="@color/red"
              android:layout_marginStart="-210dp"
              android:lines="1"
              android:ellipsize="end"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
      </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RatingBar
                android:id="@+id/food_rate_all"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/food_rate_text_all"
                android:text="(4.5)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/food_decr_all"
            android:text="ngon lam"
            android:lines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>